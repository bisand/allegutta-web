{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "node .output/server/index.mjs",
    "db:init": "./scripts/init-db.sh",
    "db:init:docker": "./scripts/init-db.sh docker",
    "db:init:production": "./scripts/init-db.sh production",
    "db:deploy:production": "./scripts/deploy-production.sh",
    "db:push": "npx prisma db push",
    "db:reset": "rm -f ./dev.db && ./scripts/init-db.sh",
    "db:studio": "npx prisma studio",
    "db:backup": "./scripts/backup.sh",
    "db:backup:production": "./scripts/backup.sh production",
    "db:seed": "node scripts/seed.js",
    "backup": "./scripts/backup.sh local",
    "backup:s3": "./scripts/backup.sh s3",
    "backup:docker": "./scripts/backup.sh docker",
    "docker:build": "docker build -t allegutta-web:latest .",
    "docker:run": "docker run -p 3000:3000 -v allegutta_data:/app/data allegutta-web:latest",
    "deploy:swarm": "docker stack deploy -c docker-compose.swarm.yml allegutta"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
