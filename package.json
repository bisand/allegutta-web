    "@nuxt/image": "1.11.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/i18n": "^10.0.6",
    "@nuxtjs/kinde": "0.3.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@prisma/client": "6.15.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@vite-pwa/nuxt": "^1.0.4",
    "@vueuse/nuxt": "^13.9.0",
    "eslint": "^9.35.0",
    "nuxt": "^4.1.1",
    "pinia": "^3.0.3",
    "prisma": "6.15.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1",
    "workbox-window": "^7.3.0",
    "zod": "^4.1.5"
  }
}
